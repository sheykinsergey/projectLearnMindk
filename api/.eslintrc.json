{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-console": "warn",
        "semi": "warn",
        "max-len": ["error", 80, { "ignoreUrls": true }],
        "quotes": ["error", "double"],
        "indent": ["error", 4]
    }
}
